<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Edit Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
</head>

<body>
        <nav class="navbar navbar-light bg-light">
                <a style="margin-left: 80px;" class="navbar-brand" href="/">home</a>
              </nav>
    <div class="container">
        <div class="row">
         <div style="    margin-left: 25%;" class="col-sm-6 col-sm-offset-3">
            <h1 style="text-align: center;    margin-top: 20px;
            margin-bottom: 1px;">Edit Order</h1>
          <form class="form" style="margin: 50px 30px 50px 30px;"  action="/order/<%= order.id %>/edit" method="post" >
              <div class="form-group">
      <label for="email"> Email:</label>
      <input name="email" value="<%= order.email %>" type="text" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="pwd">Number</label>
      <input name="number" value="<%= order.number %>" type="number" class="form-control" id="pwd">
    </div>
    <div class="form-group">
      <label for="pwd">Price</label>
      <input name="price" value="<%= order.total_price %>" type="number" class="form-control" id="pwd">
    </div>
    <div class="form-group">
        <label for="pwd">Currency</label>
        <input name="currency" value="<%= order.currency %>" type="text" class="form-control" id="pwd">
    </div>
    <div class="form-group">
            <label for="pwd">Line Items</label>
            <%
            var i=0;
             order.line_items.forEach(function(item){ 
                %>
                <input style="display: none;" name="line_items[<%=i%>][id]" value="<%= item.id %>" type="text" class="form-control" id="pwd">
                <input name="line_items[<%=i%>][title]" value="<%= item.title %>" type="text" class="form-control" id="pwd">
                <% i++;});%> 
          </div>
          <div class="form-group">
                <label style="font-size: 1.3em" for="pwd">Billing Address</label>
            </div>
      <div class="form-group">
        <label for="pwd">Name</label>
        <input name="billing_address[first_name]" type="text" value="<%= order.billing_address.first_name %>" class="form-control req"  id="pwd">
      </div>
       <div class="form-group">
            <label for="pwd">Address</label>
        <input name="billing_address[address1]" type="text" value="<%= order.billing_address.address1 %>" class="form-control req"  id="pwd">
        </div>
        <div class="form-group">
          <label for="pwd">City</label>
          <input name="billing_address[city]" type="text" value="<%= order.billing_address.city %>" class="form-control req"  id="pwd">
        
        </div>
        <div class="form-group">
                <label for="pwd">zip</label>
                <input name="billing_address[zip]" type="text" value="<%= order.billing_address.zip %>" class="form-control req"  id="pwd">
              
              </div>
    <input class="btn btn-warning" type="submit" value="Update">
          </form>
      </div>
      </div>
  </div>
    <footer class="page-footer font-small blue">

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">Â© 2019 Copyright:
            <a href="#"> BazingaTestApp </a>
        </div>
        <!-- Copyright -->

    </footer>
</body>

</html>